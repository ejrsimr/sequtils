#!/usr/bin/env python3
# ejr: 2022-11-10
# lmd: 2022-11-16
# generate histogram of sequences lengths and gc content from FASTA file

from sequtils import *
import signal
import pandas as pd
from matplotlib import pyplot as plt
import seaborn as sb
import fileinput

###############################################################################
### MAIN 
###############################################################################
def main():
    fh = fileinput.input()
    fasta = read_fasta(fh)
    length_histogram(fasta, 100)
    gc_histogram(fasta, 100)

###############################################################################
### LENGTH HISTOGRAM 
###############################################################################
def length_histogram(fasta, num_bins):
    df = pd.DataFrame(list(fasta.items()), columns = ['header','seq'])  
    df['length'] = df['seq'].apply(len)

    len_hist = sb.histplot(data = df, x='length', bins=num_bins)
    len_fig = len_hist.get_figure()
    len_fig.savefig('length_histogram.png')  
    
###############################################################################
### GC HISTOGRAM 
###############################################################################
def gc_histogram(fasta, num_bins):
    df = pd.DataFrame(list(fasta.items()), columns = ['header','seq'])  
    df['gc'] = df['seq'].apply(calc_gc)

    gc_hist = sb.histplot(data = df, x='gc', bins=num_bins)
    gc_fig = gc_hist.get_figure()
    gc_fig.savefig('gc_histogram.png')

###############################################################################
### RUN MAIN 
###############################################################################
if __name__ == "__main__":
    signal.signal(signal.SIGPIPE, signal.SIG_DFL)
    main()